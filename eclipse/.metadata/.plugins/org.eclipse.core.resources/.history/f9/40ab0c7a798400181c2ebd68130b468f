package hitchbot.mods;

import org.lwjgl.input.Keyboard;

import hitchbot.main.Category;
import hitchbot.main.Hitchbot;
import net.minecraft.network.play.client.C03PacketPlayer;

public class WarzAimNS extends Module{

	public WarzAimNS() {
		super("WarzAimNS", Keyboard.KEY_V, Category.COMBAT);
	}
	
	@Override
	public void onRender() {
		if (this.isToggled()) {
			if (Hitchbot.aimbotTimer<System.currentTimeMillis()-50) {
				C03PacketPlayer.C05PacketPlayerPosLook (mc.thePlayer.rotationYaw, mc.thePlayer.rotationPitch, !mc.thePlayer.isAirBorne);
			}
		}
		super.onRender();
	}

}
