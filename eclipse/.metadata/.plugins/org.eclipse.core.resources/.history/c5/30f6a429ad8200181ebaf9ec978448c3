package hitchbot.mods;

import java.awt.AWTException;
import java.awt.Robot;
import java.awt.event.KeyEvent;

import org.lwjgl.input.Keyboard;

import hitchbot.main.Category;
import net.minecraft.item.Item;

public class AutoSteak extends Module {
	
	private static double timer = System.currentTimeMillis(); 
	
	public AutoSteak() {
		super("AutoSteak",Keyboard.KEY_N, Category.COMBAT);
	}
	public void onRender() {
		if (this.isToggled()) {
			if (mc.thePlayer.getHealth() < 10) {
				if (System.currentTimeMillis() - timer > 1000) {
					if (mc.thePlayer.inventory.getStackInSlot(0).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_0);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(1).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_1);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(2).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_2);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(3).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_3);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(4).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_4);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(5).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_5);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(6).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_6);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(6).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_7);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(8).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyPress(KeyEvent.VK_8);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
				}
				if (System.currentTimeMillis() - timer > 600 && System.currentTimeMillis() - timer > 500) {
					if (mc.thePlayer.inventory.getStackInSlot(0).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_0);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(1).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_1);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(2).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_2);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(3).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_3);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(4).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_4);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(5).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_5);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(6).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_6);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(6).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_7);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
					if (mc.thePlayer.inventory.getStackInSlot(8).getItem().equals(Item.getItemById(364))) {
						   try {
							Robot r = new Robot();
						    r.keyRelease(KeyEvent.VK_8);
						  } catch (AWTException e) {
						    e.printStackTrace();
						  }
					}
				}
			}
		}
		super.onUpdate();
	}

}
